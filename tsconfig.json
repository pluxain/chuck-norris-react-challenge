{
  "compilerOptions": {
    "types": ["jest", "node", "webpack-env"],
    "baseUrl": "./src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "paths": {
      "api/*": ["api/*"],
      "components/*": ["components/*"],
      "features/*": ["features/*"],
      "utils/*": ["utils/*"]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
